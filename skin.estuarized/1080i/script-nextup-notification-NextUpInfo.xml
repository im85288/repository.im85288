<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <zorder>0</zorder>
    <controls>
        <control type="group">
            <animation effect="fade" end="100" time="200">WindowOpen</animation>
            <animation effect="fade" time="200">VisibleChange</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <left>0</left>
            <top>740</top>
            <width>1920</width>
            <height>400</height>
            <control type="group">
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture colordiffuse="background">skyq/Backgrounds/infobar1.png</texture>
                </control>
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture>skyq/Backgrounds/infobar1.png</texture>
                </control>
                <control type="label" description="text">
                    <top>20</top>
                    <align>left</align>
                    <left>60</left>
                    <height>35</height>
                    <aligny>center</aligny>
                    <font>sky33</font>
                    <label>$LOCALIZE[40218]</label>
                    <textcolor>subwhite</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>
                <control type="image" description="fanart">
                    <left>60</left>
                    <top>60</top>
                    <width>300</width>
                    <height>169</height>
                    <fadetime>350</fadetime>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                    <texture>$INFO[VideoPlayer.Cover]</texture>
                </control>
                <control type="group">
                    <left>60</left>
                    <top>224</top>
                    <width>300</width>
                    <control type="progress">
                        <animation effect="fade" end="0" time="200">WindowClose</animation>
                        <height>5</height>
                        <info>Player.ProgressCache</info>
                        <texturebg border="3" colordiffuse="00FFFFFF">colors/white50.png</texturebg>
                        <midtexture colordiffuse="$VAR[ColourFocus]">colors/white50.png</midtexture>
                        <animation effect="fade" start="100" end="80" time="0" condition="true">Conditional</animation>
                    </control>
                    <control type="progress" id="23">
                        <animation effect="fade" end="0" time="200">WindowClose</animation>
                        <height>5</height>
                        <info>Player.Progress</info>
                        <texturebg border="3" colordiffuse="80FFFFFF">colors/white50.png</texturebg>
                        <midtexture colordiffuse="$VAR[ColourFocus]">colors/white50.png</midtexture>
                    </control>
                </control>

                <control type="label" description="text">
                    <top>235</top>
                    <align>left</align>
                    <left>60</left>
                    <height>35</height>
                    <aligny>center</aligny>
                    <font>sky20</font>
                    <width>300</width>
                    <label>$INFO[VideoPlayer.Season]$INFO[VideoPlayer.Episode,x,  ]$INFO[VideoPlayer.Title]</label>
                    <textcolor>subwhite</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>

                <control type="image" id="123111">
                    <top>40</top>
                    <left>424</left>
                    <width>427</width>
                    <height>240</height>
                    <texture fallback="empty.png" background="true">$VAR[PlayerLandscape]</texture>
                    <aspectratio>scale</aspectratio>
                </control>

                <control type="button" id="3013">
                    <description>Cancel</description>
                    <left>630</left>
                    <top>120</top>
                    <width>48</width>
                    <height>48</height>
                    <label></label>
                    <align>center</align>
                    <aligny>center</aligny>
                    <textoffsetx>0</textoffsetx>
                    <onup>3012</onup>
                    <ondown>3012</ondown>
                    <texturefocus colordiffuse="$VAR[ColourFocus]">dialogs/nextup/nextupstop.png</texturefocus>
                    <texturenofocus>-</texturenofocus>
                </control>

                <control type="button" id="3012">
                    <description>Play</description>
                    <left>630</left>
                    <top>120</top>
                    <width>48</width>
                    <height>48</height>
                    <label></label>
                    <align>center</align>
                    <aligny>center</aligny>
                    <textoffsetx>0</textoffsetx>
                    <onup>3013</onup>
                    <ondown>3013</ondown>
                    <texturefocus colordiffuse="$VAR[ColourFocus]">dialogs/nextup/nextupplay.png</texturefocus>
                    <texturenofocus>-</texturenofocus>
                </control>

                <control type="grouplist">
                    <left>424</left>
                    <top>290</top>
                    <width>433</width>
                    <height>30</height>
                    <align>right</align>
                    <orientation>horizontal</orientation>
                    <itemgap>5</itemgap>
                    <control type="image">
                        <width>60</width>
                        <height>30</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$VAR[NewResolutionFlagVarPlayer]</texture>
                        <visible>!String.IsEmpty(VideoPlayer.VideoResolution)</visible>
                    </control>
                    <control type="image">
                        <width>60</width>
                        <height>30</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$VAR[VideoAspect]</texture>
                        <visible>!String.IsEmpty(VideoPlayer.VideoAspect)</visible>
                    </control>
                    <control type="image">
                        <width>60</width>
                        <height>30</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$VAR[HDSD]</texture>
                        <visible>!String.IsEmpty(VideoPlayer.VideoResolution)</visible>
                    </control>
                </control>

                <control type="label" description="text">
                    <top>290</top>
                    <left>424</left>
                    <width>433</width>
                    <align>left</align>
                    <height>30</height>
                    <aligny>top</aligny>
                    <font>skybold30</font>
                    <label>$INFO[Control.GetLabel(3002)]</label>
                    <shadowcolor>black</shadowcolor>
                </control>

                <control type="label" description="text">
                    <top>40</top>
                    <left>860</left>
                    <width>700</width>
                    <align>left</align>
                    <height>40</height>
                    <aligny>top</aligny>
                    <font>skybold39</font>
                    <label>$INFO[Control.GetLabel(3000)]</label>
                    <shadowcolor>black</shadowcolor>
                </control>

                <control type="label" description="text">
                    <top>80</top>
                    <left>860</left>
                    <width>700</width>
                    <align>left</align>
                    <height>35</height>
                    <aligny>bottom</aligny>
                    <font>sky33</font>
                    <label>$INFO[Player.TimeRemaining(ss), Next episode starts in , seconds]</label>
                    <shadowcolor>black</shadowcolor>
                </control>

                <control type="label" description="text">
                    <top>250</top>
                    <left>860</left>
                    <width>700</width>
                    <align>left</align>
                    <height>35</height>
                    <aligny>bottom</aligny>
                    <font>sky33</font>
                    <label>$LOCALIZE[40219]</label>
                    <shadowcolor>black</shadowcolor>
                </control>
                <control type="label" description="text">
                    <top>287</top>
                    <left>860</left>
                    <width>700</width>
                    <align>left</align>
                    <height>35</height>
                    <aligny>bottom</aligny>
                    <font>sky20</font>
                    <label>$LOCALIZE[40220]</label>
                    <textcolor>subwhite</textcolor>
                    <shadowcolor>black</shadowcolor>
                </control>

                <control type="image">
                    <right>10</right>
                    <top>20</top>
                    <width>330</width>
                    <height>241</height>
                    <texture>$VAR[PlayerClearLogo]</texture>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                </control>


                <control type="group">
                    <visible>false</visible>
                    <left>0</left>
                    <right>0</right>
                    <height>64</height>
                    <bottom>0</bottom>
                    <control type="label">
                        <width>100%</width>
                        <top>0</top>
                        <height>64</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>skybold35</font>
                        <shadowcolor>black</shadowcolor>
                        <scroll>yes</scroll>
                        <label>$INFO[Control.GetLabel(3002)]$INFO[Control.GetLabel(3000), ,]</label>
                    </control>
                    <control type="label" description="episode/season info" id="3002">
                        <visible>false</visible>
                    </control>
                    <control type="label" description="Title" id="3000">
                        <visible>false</visible>
                    </control>
                    <control type="label" id="3003" description="rating">
                        <visible>false</visible>
                    </control>
                    <control type="label" id="3004" description="year/runtime">
                        <visible>false</visible>
                    </control>
                    <control type="textbox" id="3001" description="Plot">
                        <visible>false</visible>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>